<UserControl 
    x:Class="MusicPlayerWPF.MVVM.Views.AllSongsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Local="clr-namespace:MusicPlayerWPF.MVVM.Views"
    mc:Ignorable="d"
>
    <StackPanel
        Background="Transparent">
        <TextBlock Text="{Binding Path=Text, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Command="{Binding Path=PlaySongCommand}">asb</Button>
        <ListBox
            Background="Transparent"
            BorderThickness="0"
            x:Name="AllSongs"
            ItemsSource="{Binding AllSongs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            HorizontalContentAlignment="Stretch"
            SelectedItem="{Binding SelectedSong}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Height" Value="50"/>
                    <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Green"/>
                    </Style.Resources>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
				<DataTemplate>
					<Grid Margin="0,2">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
							<RowDefinition/>
						</Grid.RowDefinitions>
						<TextBlock
                            Grid.Column="0"
                            Text="{Binding Path=Title}"
                            Foreground="Black"
                            HorizontalAlignment="Left"/>
                        <TextBlock
                            Grid.Column="1"
                            Text="{Binding Path=Artists}"
                            Foreground="Black"
                            HorizontalAlignment="Center"/>
                        <TextBlock
                            Grid.Column="2"
                            Text="{Binding Path=Album}"
                            Foreground="Black"
                            HorizontalAlignment="Center"/>
                        <Button
                            Grid.Column="3"
                            Command="{Binding PlaySongCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}"
                            CommandParameter="{Binding SelectedSong}">play</Button>
                        <TextBlock
                            x:Name="Id"
                            Visibility="Hidden"
                            Text="{Binding Path=Id}"
                            Foreground="Black"
                            HorizontalAlignment="Center"/>
					</Grid>
				</DataTemplate>
			</ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>
